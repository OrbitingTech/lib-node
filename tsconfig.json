{
    "compilerOptions": {
        "esModuleInterop": true,
        "skipLibCheck": true,
        "target": "ES2020",
        "resolveJsonModule": true,
        "moduleDetection": "force",
        "isolatedModules": true,
        "verbatimModuleSyntax": true,

        "strict": true,
        "noUncheckedIndexedAccess": true,
        "noImplicitOverride": true,

        "module": "NodeNext",
        "rootDir": "src",
        "outDir": "lib",
        "sourceMap": true,

        "declaration": true,

        "lib": ["es2022"]
    }
}
