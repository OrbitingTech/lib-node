{
    "compilerOptions": {
        "target": "es5",
        "module": "esnext",
        "lib": ["esnext", "dom"],
        "declaration": true,
        "outDir": "./lib",
        "rootDir": "./src",
        "strict": true,

        "moduleResolution": "node",
        "baseUrl": ".",
        "sourceMap": true,

        "esModuleInterop": true,

        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}
