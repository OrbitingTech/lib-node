{
    "ignorePatterns": ["node_modules/", "lib/"],
    "env": {
        "node": true,
        "es6": true
    },
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": "latest"
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:prettier/recommended"
    ],
    "rules": {
        "prettier/prettier": "warn",

        "@typescript-eslint/consistent-type-imports": "warn",
        "@typescript-eslint/no-unused-vars": "warn"
    }
}
