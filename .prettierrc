{
    "arrowParens": "avoid",
    "bracketSameLine": false,
    "bracketSpacing": true,
    "endOfLine": "lf",
    "printWidth": 80,
    "proseWrap": "preserve",
    "semi": false,
    "singleAttributePerLine": true,
    "singleQuote": true,
    "tabWidth": 4,
    "trailingComma": "all",
    "plugins": ["@ianvs/prettier-plugin-sort-imports"],
    "importOrder": [
        "<TYPES>",
        "",
        "<BUILTIN_MODULES>",
        "<THIRD_PARTY_MODULES>",
        "",
        "^[.]",
        ""
    ],
    "overrides": [{ "files": "*.svelte", "options": { "parser": "svelte" } }]
}
