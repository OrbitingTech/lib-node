{
    "name": "orbiting",
    "version": "1.0.7",
    "description": "The official Orbiting client library.",
    "main": "lib/index.js",
    "type": "module",
    "exports": {
        ".": "./lib/index.js"
    },
    "scripts": {
        "prepare": "rimraf lib && tsc -b tsconfig.dist.json",
        "format": "prettier --write .",
        "test": "tsc && ava",
        "coverage": "tsc && c8 ava"
    },
    "author": "Orbiting Tech",
    "license": "Apache-2.0",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/OrbitingTech/lib-node.git"
    },
    "ava": {
        "require": [
            "dotenv/config"
        ],
        "verbose": true,
        "typescript": {
            "rewritePaths": {
                "src/": "lib/"
            },
            "compile": false
        }
    },
    "c8": {
        "all": true,
        "include": [
            "lib/**/*.js"
        ],
        "exclude": [
            "lib/types/**/*",
            "**/*.test.js"
        ]
    },
    "devDependencies": {
        "@ava/typescript": "^4.1.0",
        "@ianvs/prettier-plugin-sort-imports": "^4.1.1",
        "@types/debug": "^4.1.12",
        "@types/node": "^20.11.17",
        "@types/ws": "^8.5.10",
        "ava": "^6.1.3",
        "c8": "^9.1.0",
        "dotenv": "^16.4.3",
        "eslint": "^8.56.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.1.3",
        "fluent-json-schema": "^4.2.1",
        "prettier": "^3.2.5",
        "rimraf": "^5.0.5",
        "typescript": "^5.3.3",
        "typescript-eslint": "^7.0.1"
    },
    "dependencies": {
        "axios": "^1.7.5",
        "debug": "^4.3.4",
        "ws": "^8.18.0"
    }
}
